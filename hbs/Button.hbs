<style>
    .Button {
        font-weight: bold;
        padding: 4px 8px;
        background: linear-gradient(#235, #346);
        border: 2px solid #57b;
        color: #57b;
        cursor: pointer;
        border-radius: 16px;
        height: 32px;
    }

    .Button:hover {
        background: #333;
    }
</style>
<input class="Button" type="button" value="{{label}}"/>
